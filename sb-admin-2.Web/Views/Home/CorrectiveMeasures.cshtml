
@model sb_admin_2.Web.Models.Preventive

@{
    ViewBag.Title = "CorrectiveMeasures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Corrective Measures Taken</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">

            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                            <div class="form-group">
                                @Html.Label("Equipment for Corrective Measure")
                                @Html.EnumDropDownListFor(model => model.equipmentForCorrective, "Select Equipment", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Corrective Measure Taken")
                                @Html.EnumDropDownListFor(model => model.correctiveMeasures, "Corrective Measures Taken", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Comment box for technicians to comment")
                                @Html.TextAreaFor(x => x.reportedIssue, 10, 55, null)
                            </div>
                            <div class="form-group">
                                <label>If replaced is selected</label>
                                <input class="form-control" placeholder="Old Serial No.">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="New Serial No.">
                            </div>
                            
                            @Html.ActionLink("Next", "SignOff", "Home", null, new { @class = "btn btn-primary" })
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    @*<div class="col-lg-6">

                        </div>*@
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->