                '<tr>' +
                '<td class="title">UPS Serial No:</td>' +
                '<td>' + data.ups_serialNo + '</td>' +
                '<td class="title">HDD Serial No:</td>' +
                '<td>' + data.hdd_serialNo + '</td>' +
                '</tr>' +
                '<tr>' +
