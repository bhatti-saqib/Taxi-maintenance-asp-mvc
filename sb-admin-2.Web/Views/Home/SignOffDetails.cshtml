            '</table>' +
                '</div>';
        };

        $(document).ready(function () {

            var data = [
                {
                    "site_name": "@Model.NT_SiteName", "taxi_type": "@Model.NT_TaxiType", "taxi_plateNo": "@Model.NT_PlateNumber", "date": "@Model.NT_Date",
                    "mdvr_no": "@Model.NT_MdvrNo", "region": "@Model.NT_Region", "mdvr_serialNo": "@Model.NT_MDVRSerialNo", "camera_serialNo": "@Model.NT_CameraSerialNo",
                    "ups_serialNo": "@Model.NT_UpsSerialNo", "hdd_serialNo": "@Model.NT_HDDSerialNo", "sim_card": "@Model.NT_Sims", "emmi": "@Model.NT_Emmis",
                    "camera_fov": "@Model.NT_CameraFovs", "power_connection": "@Model.NT_PowerConnections", "power_cables": "@Model.NT_PowerCables",
                    "camera_cable": "@Model.NT_CameraCables", "fourG_cable": "@Model.NT_FourG_cables", "gps_cable": "@Model.NT_Gps_cables",
                    "wiFi_cable": "@Model.NT_WifiCables", "labeling": "@Model.NT_Labeling", "cable_dressing": "@Model.NT_CableDressing",
                    "camera_connector": "@Model.NT_CameraConnector", "disk_size": "@Model.NT_DiskSize", "bronco_mdvr": "@Model.NT_BroncoMdvrs",
                    "gps": "@Model.NT_Gps", "four_g": "@Model.NT_Four_g", "wifi": "@Model.NT_Wifi", "ups_voltage_test": "@Model.NT_Ups",
                    "taxi_channel": "@Model.NT_Channel", "taxi_handover": "@Model.NT_TaxiHandover", "exisiting_alarms": "@Model.NT_NoExistingAlarms",
                    "clean_without_damage": "@Model.NT_TaxiCabin", "items_left": "@Model.NT_ItemsLeftInside"
                }

            ];


        
            var table = $('.datatables').DataTable({
                
                // Column definitions
                columns: [
                    {
                        className: 'details-control',
                        defaultContent: '',
                        data: null,
                        orderable: false
                    },
                    { data: 'site_name' },
                    { data: 'taxi_type' },
                    { data: 'taxi_plateNo' },
                    { data: 'date' }
                ],

                "paging": false,
                "ordering": false,
                "info": false,
                "searching": false,
                data: data,

                //pagingType: 'full_numbers',

                // Localization
                language: {
                    emptyTable: 'Virhe! Haku epäonnistui.',
                    zeroRecords: 'Ei hakutuloksia.',
                    thousands: ',',
                    processing: 'Prosessoidaan...',
                    loadingRecords: 'Ladataan...',
                    info: 'Sivu _PAGE_ / _PAGES_',
                    infoEmpty: 'Sivu 0 / 0',
                    infoFiltered: '(rajattu _MAX_ hakutuloksesta)',
                    infoPostFix: '',
                    lengthMenu: 'Rivien määrä _MENU_',
                    search: 'Hae:',
                    paginate: {
                        first: 'Ensimmäinen',
                        last: 'Viimeinen',
                        next: 'Seuraava',
                        previous: 'Edellinen'
                    },
                    aria: {
                        sortAscending: ' aktivoi järjestääksesi sarake nousevasti',
                        sortDescending: ' aktivoi järjestääksesi saraka laskevasti'
                    }
                }
            });

            $('.datatables tbody').on('click', 'td.details-control', function () {
                var tr = $(this).closest('tr'),
                    row = table.row(tr);

                if (row.child.isShown()) {
                    tr.next('tr').removeClass('details-row');
                    row.child.hide();
                    tr.removeClass('shown');
                }
                else {
                    row.child(format(row.data())).show();
                    tr.next('tr').addClass('details-row');
                    tr.addClass('shown');
                }
            });
        });
        </script>
