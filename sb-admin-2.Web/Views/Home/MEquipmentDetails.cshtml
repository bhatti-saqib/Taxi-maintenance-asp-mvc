@section Scripts{

    <script type="text/javascript">
        $(".radio-inline").click(function () {
            $("#mdvrId").attr("disabled", true);
            if ($("input[name=MDVRYes]:checked").val() == "yes") {
                $("#mdvrId").attr("disabled", false);
            }
        });


        $(".radio-inline").click(function () {
            $("#cameraId").attr("disabled", true);
            if ($("input[name=TaxiYes]:checked").val() == "yes") {
                $("#cameraId").attr("disabled", false);
            }
        });


        $(".radio-inline").click(function () {
            $("#upsId").attr("disabled", true);
            if ($("input[name=UPSYes]:checked").val() == "yes") {
                $("#upsId").attr("disabled", false);
            }
        });


        $(".radio-inline").click(function () {
            $("#hddId").attr("disabled", true);
            if ($("input[name=HDDYes]:checked").val() == "yes") {
                $("#hddId").attr("disabled", false);
